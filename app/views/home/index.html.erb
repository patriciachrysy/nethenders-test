<h1>Maximum amount of nuts reaching the city</h1>

<%= form_with url: evaluate_path, local: true, method: :post do %>

    <div>
        <%= label_tag "Datas" %><br />
        <%= text_area_tag "datas", nil, size: "27x7" %>
        <% if local_assigns.has_key? :status_msg %>
            <p><%= status_msg %></p>
        <% end %>
    </div>

    <%= submit_tag "Evaluate" %>

<% end %>

<% if local_assigns.has_key? :evaluation %>
    <h1>Evaluation results</h1>
    <p><%= evaluation %></p>
<% end %>